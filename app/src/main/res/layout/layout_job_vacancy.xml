<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/padding_s"
    android:paddingBottom="@dimen/padding_m"
    android:paddingStart="@dimen/padding_m"
    android:paddingEnd="@dimen/padding_m"
    android:layout_marginTop="@dimen/margin_m"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/companyLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_company_logo1"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/companyLogo"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Company Name"
        android:textSize="15sp"
        android:layout_marginStart="@dimen/margin_s"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:lines="1"
        />
    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/companyLogo"
        android:text="@string/hiring_sample"
        android:layout_marginTop="@dimen/margin_s"
        android:textSize="14sp"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:text="Apply"
        android:textSize="10sp"
        android:background="@drawable/color_apply_button"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</android.support.constraint.ConstraintLayout>